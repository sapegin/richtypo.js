{
	"defs": {
		"prepos": "et|le|un|les|la|pour|mais|ou|donc|or|ni|car",
		"european": "[a-zA-ZÀ-ž0-9-]",
		"europeanwithquotes": "[a-zA-ZÀ-ž0-9-“”‘’]",
		"europeannohyphen": "[a-zA-ZÀ-ž0-9]",
		"europeanupper":
			"[A-ZÁÀÂÃÄĂĀÅĄÆÉÈÊËĚĒĖĘÍÌÎÏĪĮIÓÒÔÕÖŐØŒÚÙÛÜŰŪÝĆČĎĐĐĢĞŁĻŃÑŇŅŊŘŚŠŞŤŦÞŢŻŹŽ]",
		"noneuropean": "[^a-zA-ZÀ-ž0-9-]"
	},

	"rules": {
		"emdash_lite": [
			{
				"regex": "---?",
				"result": "—"
			},
			{
				"regex": " - ",
				"result": " — "
			},
			{
				"regex": "([,\\)>])- ",
				"result": "$1 — "
			},
			{
				"regex": "(^|\\n)\\-",
				"result": "$1&mdash;",
				"comment": "For strange reason '\n—' replaces '\n' with space"
			}
		],
		"emdash": [
			{
				"regex": "($(europeanwithquotes)+)[ $(nbsp)](?:[—–])[ $(nbsp)]",
				"result": "<nobr>$1$(hairspace)—</nobr>$(hairspace)"
			},
			{
				"regex": "($(europeanwithquotes)+)[ $(nbsp)](?:[—–])",
				"result": "<nobr>$1$(hairspace)—</nobr>"
			},
			{
				"regex": "(?:[—–])[ $(nbsp)]",
				"result": "—$(hairspace)"
			},
			{
				"regex": "($(europeanwithquotes)+)(?:[—–])($(european))",
				"result": "<nobr>$1$(hairspace)—</nobr>$(hairspace)$2"
			}
		],

		"hyphen": {
			"regex":
				"($(noneuropean)|^)((?:$(europeannohyphen){1,2}(?:\\-$(europeannohyphen)+))|(?:$(europeannohyphen)+(?:\\-$(europeannohyphen){1,2})))(?!$(european))",
			"flags": "g",
			"result": "$1<nobr>$2</nobr>"
		},
		"preposition": {
			"regex": "($(noneuropean)|^)($(prepos)) ",
			"result": "$1$2$(nbsp)"
		},
		"punctuation": [
			{
				"regex": "(?:\\s+)?([\\?!:\\xbb]|(?<!&[^\\s]*);)",
				"result": "$(hairspace)$1"
			},
			{
				"regex": "(\\xab)(?:\\s+)?",
				"result": "$1$(hairspace)"
			}
		],
		"spaces": ["hyphen", "preposition", "punctuation"],

		"ellipsis": {
			"regex": "\\.{2,}",
			"result": "…"
		},

		"quotes": [
			{
				"regex": "(?:\"|&quot;|&laquo;\\s?)($(european))",
				"result": "«$1"
			},
			{
				"regex": "(?:\"|&quot;|&raquo;)",
				"result": "»"
			}
		],

		"amp": {
			"regex": "&amp;",
			"result": "<span class=\"amp\">&amp;</span>"
		},

		"abbr": {
			"regex": "($(europeanupper){3,})",
			"flags": "g",
			"result": "<abbr>$1</abbr>"
		},
		"lite": ["quotes", "ellipsis", "emdash_lite"],
		"rich": ["emdash", "spaces", "abbr"],
		"title": ["amp"]
	}
}
