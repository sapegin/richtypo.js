{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore: Publish :shipit:"
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "package-lock.json",
        "*.md",
        "*.test.ts",
        "*.snap"
      ]
    }
  }
}
