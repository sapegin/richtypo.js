{
  "name": "richtypo.js",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-core": "^7.0.0-bridge",
    "babel-jest": "^24.9.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "eslint": "^6.2.0",
    "eslint-config-tamia": "^7.0.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^6.1.0",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2",
    "serve": "^14.1.2"
  },
  "engines": {
    "node": ">=8.10"
  },
  "jest": {
    "moduleNameMapper": {
      "^richtypo$": "<rootDir>/packages/richtypo/src/richtypo.js",
      "^richtypo-rules-common$": "<rootDir>/packages/richtypo-rules-common/src/common.js"
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/packages/(.*)/lib/(.*)\\.js"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "pretest": "npm run lint",
    "test": "jest",
    "posttest": "npm run format",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --cache --fix",
    "format": "prettier --write \"**/*.{js,jsx,md,css}\"",
    "gh-pages": "gh-pages -d example/build",
    "example:build": "lerna exec --scope richtypo-example -- npm run build",
    "example:serve": "lerna exec --scope richtypo-example -- npm run serve"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,md,css}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
