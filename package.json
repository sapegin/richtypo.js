{
  "name": "richtypo.js",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.51.0",
    "eslint-config-tamia": "^8.1.1",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lerna": "^8.1.5",
    "lint-staged": "^14.0.1",
    "prettier": "^3.3.2",
    "richtypo": "file:packages/richtypo",
    "richtypo-rules-en": "file:packages/richtypo-rules-en",
    "richtypo-rules-fr": "file:packages/richtypo-rules-fr",
    "richtypo-rules-ru": "file:packages/richtypo-rules-ru",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.1",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "vitest": "^0.34.6"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "vitest run",
    "posttest": "npm run format",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --cache --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,css,html}\"",
    "gh-pages": "gh-pages -d example/dist",
    "clean": "rimraf -g \"packages/**/dist\" \"packages/**/*.tsbuildinfo\"",
    "compile": "tsc --build tsconfig.build.json",
    "docs": "npm run build --workspace=example",
    "prepare": "npm run compile"
  },
  "workspaces": [
    "packages/*",
    "example"
  ],
  "lint-staged": {
    "*.{js,ts,tsx,md,css,html}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --cache --fix"
  }
}
