{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "es2020",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"noEmit": false,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"richtypo": ["packages/richtypo"],
			"richtypo-rules-common": ["packages/richtypo-rules-common"],
			"richtypo-rules-ru": ["packages/richtypo-rules-ru"],
			"richtypo-rules-en": ["packages/richtypo-rules-en"],
			"richtypo-rules-fr": ["packages/richtypo-rules-fr"]
		}
	},
	"exclude": ["**/*.test.ts"]
}
